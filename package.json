{
  "name": "claude-analytics",
  "version": "1.0.0",
  "description": "Analytics and habit tracking for Claude Code usage",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "claude-stats": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "dashboard": "node dist/server/dashboard.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "claude",
    "analytics",
    "habit-tracking",
    "productivity"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "commander": "^12.0.0",
    "zod": "^3.23.0",
    "chalk": "^5.3.0",
    "date-fns": "^3.0.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/express": "^4.17.21",
    "@types/node": "^18.19.68",
    "@vitest/coverage-v8": "^1.6.0",
    "typescript": "^5.7.2",
    "vitest": "^1.6.0"
  }
}
